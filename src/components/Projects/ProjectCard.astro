---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  name: string;
  image: { src: ImageMetadata; alt: string };
}

const { name, image } = Astro.props;
---

<li class="p-5 list-none grid grid-rows-subgrid row-span-2 bg-cat-crust/50 backdrop-blur-sm rounded">
  <h3 class="text-lg font-bold text-cat-peach">{name}</h3>

  <Image src={image.src} alt={image.alt} class="object-contain h-36" />
</li>
