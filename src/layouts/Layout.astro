---
import { SEO } from "astro-seo";
import og from "@/assets/og.png";
interface Props {
  title: string;
}

const { title } = Astro.props;
const description =
  "Need a fullstack developer? Documentation reading enjoyer, Constantly learning. It's JuanoD. With multiple years of experience developing and leading teams";
const site = "https://juanod.com";
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description={description}
      charset="UTF-8"
      canonical={site}
      openGraph={{
        basic: { title: title, type: "website", image: `${site}${og.src}` },
        optional: { locale: "en_US", description },
      }}
      twitter={{
        card: "summary_large_image",
        title: title,
        description,
        // site,
        image: `${site}${og.src}`,
        imageAlt: "JuanoD's portfolio Hero Section",
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.svg", type: "image/svg+xml" }],
      }}
    />
    <meta name="theme-color" content="#1e1e2e" />
    <meta name="viewport" content="width=device-width" />
    <!--meta name="generator" content={Astro.generator} /-->
    <!--link rel="manifest" href="/manifest.webmanifest" /-->
    <title>{title}</title>
  </head>
</html>
<body>
  <slot />
  <style is:global>
    :root {
      --accent: 136, 58, 234;
      --accent-light: 224, 204, 250;
      --accent-dark: 49, 10, 101;
      --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent)),
        rgb(var(--accent-light)) 30%,
        white 60%
      );
      color: theme(colors.cat-text.DEFAULT);
    }

    * {
      text-wrap: pretty;
    }

    ::selection {
      background-color: theme(colors.cat-surface2.DEFAULT / 0.5);
      color: theme(colors.cat-text.DEFAULT);
    }
    html {
      font-family: system-ui, sans-serif;
      background: theme(colors.cat-base.DEFAULT);
      background-size: 224px;
    }

    html,
    body {
      scrollbar-gutter: stable;
      scroll-padding-top: theme(size.12);
      scroll-behavior: smooth;
    }

    a {
      @apply focus-visible:ring-2 focus-visible:ring-cat-sky focus:outline-none focus-visible:outline-none rounded text-cat-blue hover:text-cat-sky;
    }

    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }
  </style>
</body>
