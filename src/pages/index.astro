---
import Education from "@/components/Education";
import Experience from "@/components/Experience";
import Experience3D from "@/components/Experience3D";
import Header from "@/components/Header";
import Hero from "@/components/Hero";
import AboutMe from "@/components/AboutMe.astro";
import Layout from "@/layouts/Layout.astro";
import Skills from "@/components/Skills";
import Plague from "@/assets/plague/plague.astro";
import { Image } from "astro:assets";
import A from "@/components/ExternalLink.astro";
// import Projects from "@/components/Projects";
---

<Layout title="JuanoD">
  <Header />
  <Experience3D client:idle transition:persist />
  <Plague />
  <main>
    <Hero />
    <Experience />
    <!--Projects /-->
    <Education />
    <Skills />
    <AboutMe />
    <footer
      class="h-12 flex items-center justify-center gap-4 -mb-[22rem] md:-mb-16 sticky z-20 print:hidden"
    >
      <span class="text-sm text-cat-subtext0"
        >© Juan David Díaz - {new Date().getFullYear()}</span
      >
      •
      <a href="https://librecounter.org/referer/show" target="_blank">
        <img
          class="size-4"
          src="https://librecounter.org/counter.svg"
          referrer-policy="unsafe-url"
          alt="LibreCounter"
        />
      </a>
      •
      <A href="https://github.com/catppuccin/catppuccin" class="text-sm">
        Palette by
        <Image
          class="inline"
          src="https://raw.githubusercontent.com/catppuccin/catppuccin/main/assets/logos/exports/1544x1544_circle.png"
          width="16"
          height="16"
          alt="catppuccin"
        />
      </A>
    </footer>
    <div
      class="sticky bottom-0 bg-gradient-to-t from-cat-crust from-40% z-10 md:h-24 h-96 pointer-events-none rounded-t md:mb-0 -mt-64 md:mt-0"
      aria-hidden="true"
    >
    </div>
  </main>
</Layout>

<style>
  :root {
    color-scheme: dark;
  }
</style>
